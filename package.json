{
  "name": "logloom",
  "version": "0.1.0",
  "private": true,
  "description": "A unified local-dev log aggregator",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n server,dashboard -c blue,green \"npm run dev -w @logloom/server\" \"npm run dev -w @logloom/dashboard\"",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/logloom"
  },
  "keywords": [
    "logging",
    "developer-tools",
    "debugging",
    "websocket",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
