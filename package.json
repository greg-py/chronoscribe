{
  "name": "chronoscribe",
  "version": "0.1.0",
  "private": false,
  "description": "A unified local-dev log aggregator",
  "bin": {
    "chronoscribe": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n server,dashboard -c blue,green \"npm run dev -w @chronoscribe/server\" \"npm run dev -w @chronoscribe/dashboard\"",
    "build:packages": "npm run build -w @chronoscribe/shared && npm run build -w @chronoscribe/server && npm run build -w @chronoscribe/dashboard",
    "build": "npm run build:packages && tsup",
    "prepublishOnly": "npm run build",
    "clean": "npm run clean --workspaces && rm -rf dist",
    "test": "npm run test --workspaces",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greg-py/chronoscribe"
  },
  "bugs": {
    "url": "https://github.com/greg-py/chronoscribe/issues"
  },
  "homepage": "https://github.com/greg-py/chronoscribe#readme",
  "keywords": [
    "logging",
    "developer-tools",
    "debugging",
    "websocket",
    "cli"
  ],
  "author": "Greg King",
  "license": "MIT"
}